{
  "include": ["Typescript_prac/src"],
  "compilerOptions": {
    //자바스크립트 파일이 생성될 디렉터리를 지정
    "outDir": "Typescript_prac/build",
    //우리가 어떤 버전의 자바스크립트로 컴파일할지 타입스크립트에 알려줌
    "target": "es6",
    //합쳐진 라이브러리의 정의 파일을 특정해주는 역할
    //자바스크립트 코드가 어디에서 동작할지 알려줌
    "lib": ["es6", "DOM"],
    //모든 실수로부터 보호해주려 함
    "strict": true,
    //타입스크립트 안에 자바스크립트를 허용해준다.
    "allowJs": true,
    "esModuleInterop": true,
    "module": "CommonJS"
  }
}
